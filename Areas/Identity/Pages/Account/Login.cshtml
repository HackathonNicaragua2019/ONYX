@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="content-area">

    <!-- PAGE -->
    <section class="page-section color">
        <div class="container">
            <div class="row" style="display: flex; justify-content: center;">
                <div class="col-sm-6">
                    <h3 class="block-title"><span>Ingresar</span></h3>
                    <form id="account" method="post" class="form-login">    
                        <div class="row">
                            <div class="col-md-12 hello-text-wrap">
                                <span class="hello-text text-thin"> ¡Que bien¡ tenerte de nuevo por acá </span>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <input asp-for="Input.UserName" class="form-control" placeholder="Nombre de usuario"/>    
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input asp-for="Input.Password" class="form-control" placeholder="Contraseña">
                                </div>
                            </div>

                            <div class="col-md-12 col-lg-6">
                                <div class="checkbox">
                                    <label><input type="checkbox"> Recuerdame </label>
                                </div>
                            </div>

                            <div class="col-md-12 col-lg-6 text-right-lg">
                                <a id="forgot-password" class="forgot-password"> Olvido su contraseña? </a>
                            </div>

                            <div class="col-md-6">
                                <a onClick="document.getElementById('account').submit()" class="btn btn-theme btn-block btn-theme-dark" > Entrar </a>
                            </div>

                        </div>
                    </form>
                </div>

                
                
            </div>
        </div>
    </section>
    <!-- /PAGE -->


